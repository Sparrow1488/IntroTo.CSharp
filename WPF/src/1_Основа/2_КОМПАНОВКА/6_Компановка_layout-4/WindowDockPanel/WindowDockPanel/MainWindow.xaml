<Window x:Class="WindowDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowDockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button Content="Top" Background="Azure" DockPanel.Dock="Top" MinHeight="60"/>
            <Button Content="Right" Background="Honeydew" DockPanel.Dock="Right" MinWidth="60"/>
            <Button Content="Bottom" Background="Gainsboro" DockPanel.Dock="Bottom"/>
            <Button Content="Left" Background="Firebrick" DockPanel.Dock="Left"/>
            <Button Content="Center" Background="Beige" />
        </DockPanel>
    </Grid>
</Window>
