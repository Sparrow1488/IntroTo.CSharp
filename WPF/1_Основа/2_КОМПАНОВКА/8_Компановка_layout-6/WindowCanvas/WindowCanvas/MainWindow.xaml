<Window x:Class="WindowCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Button Canvas.Top="40" Canvas.Left="20" Content="Top 40 Left 20" />
            <Button Canvas.Top="130" Canvas.Right="80" Content="Top 130 Left 80"/>
            <Button Canvas.Bottom="40" Canvas.Left="30" Content="Bottom 40 Left 30"/>
            <Button Canvas.Bottom="10" Canvas.Right="70" Content="Bottom 10 Left 70"/>
        </Canvas>
        <Button x:Name="btn1" Height="30" Click="btn1_Click">
            <StackPanel x:Name="panelInsideBtn1" Orientation="Horizontal" >
                <!--margin (left-top-right-bottom)-->
                <Button Content="TEXT BUTTON 1" Margin="0 0 2 0" Background="Bisque"/>
                <Button Content="TEXT BUTTON 2" Margin="0 0 2 0" Background="Coral"/>
                <Button Content="TEXT BUTTON 3" Margin="0 0 2 0" Background="DarkGoldenrod"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
