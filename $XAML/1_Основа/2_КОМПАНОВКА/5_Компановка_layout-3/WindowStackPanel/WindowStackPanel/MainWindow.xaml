<Window x:Class="WindowStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowStackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="250">
    <Grid>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="1" Background="White" MinHeight="30"/>
            <Button Content="2" Background="AliceBlue" MinHeight="30"/>
            <Button Content="3" Background="IndianRed" MinHeight="30"/>
        </StackPanel>
    </Grid>
</Window>
